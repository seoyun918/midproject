@charset "UTF-8";
html{
	cursor: default;
    line-height: 1.5;
    -moz-tab-size: 4;
    tab-size: 4;
    -webkit-tap-highlight-color: transparent;
    -ms-text-size-adjust: 100%;
    -webkit-text-size-adjust: 100%;
    word-break: break-word;
}
body{
	background-color: rgb(250, 251, 252);
    color: rgb(32, 36, 41);
    font-family: "Noto Sans KR", sans-serif;
    font-size: 14px;
    font-weight: normal;
    font-style: normal;
    font-stretch: normal;
    line-height: 1.4;
    letter-spacing: normal;
    width: 100%;
    height: 100%;
}
.root1{
	position: relative;
	height: 100%
}
*, :after, :before{
	box-sizing: border-box;
}
button{
	padding: 0px;
	margin: 0px;
	appearance: none;
	background: none;
	border: none;
	cursor: pointer;
}
div {
   	display: block;
}
section{
   	display: block;
}
ul {
    display: block;
    list-style-type: disc;
    margin-block-start: 1em;
    margin-block-end: 1em;
    margin-inline-start: 0px;
    margin-inline-end: 0px;
    padding-inline-start: 40px;
}
a {
    color: inherit;
    text-decoration: none;
    cursor: pointer;
}
h2 {
   display: block;
   font-size: 1.5em;
   margin-block-start: 0.83em;
   margin-block-end: 0.83em;
   margin-inline-start: 0px;
   margin-inline-end: 0px;
   font-weight: bold;
}
p {
    display: block;
    margin-block-start: 1em;
    margin-block-end: 1em;
    margin-inline-start: 0px;
    margin-inline-end: 0px;
}
iframe, img {
    border-style: none;
}
audio, canvas, iframe, img, svg, video {
    vertical-align: middle;
}
.header1{
	display: block;
	width: 100%;
	height: 75px;
}
.header11{
	position: fixed;
	display: flex;
	align-items: center;
	width: inherit;
	height: inherit;
	top: 0px;
	left: 0px;
	background-color: white;
	border-bottom: 1px solid lightgray;
	z-index: 1000;
	padding: 0px 32px 0px 26px; 
}
.header111{
	margin-right: auto;
	display: flex;
	align-items: center;
}
.mainlogo{
	margin-left: 16px;
	padding: 6px;
}
.header112{
	margin-left: auto;
	display: flex;
}
.header1122{
	position: relateve;
	margin: 0px 25px;
}
.bell{
	margin: 0px 25px;
}

.dropbtn2 {
  background-color: white;
  color: black;
  font-size: 16px;
  border: none;
  cursor: pointer;
}

.dropbtn2:hover, .dropbtn2:focus {
  background-color: none;
}

.dropdown2 {
  float: right;
  position: relative;
  display: inline-block;
}

.dropdown-content2 {
  display: none;
  position: absolute;
  background-color: white;
  min-width: 120px;
  overflow: auto;
  box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
  right: 0;
  z-index: 1;
  border-radius: 8px;
}

.dropdown-content2 a {
  color: black;
  padding: 12px 16px;
  text-decoration: none;
  display: block;
}

.dropdown2 a:hover {background-color: #ddd;}

.show2 {display: block;}

.dropbtn {
  color: black;
  font-size: 16px;
  border: none;
  cursor: pointer;
}

.dropdown {
  position: relative;
  display: inline-block;
}

.dropdown-content {
  display: none;
  position: absolute;
  right: 0;
  background-color: white;
  min-width: 120px;
  box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
  z-index: 1;
  border-radius: 8px;
}

.dropdown-content a {
  color: black;
  padding: 12px 16px;
  text-decoration: none;
  display: block;
}
.dropdown-content a:hover {background-color: none;}

.dropdown:hover .dropdown-content {
  display: block;
}

.dropdown:hover .dropbtn {
  background-color: none;
}
.big{
	display: flex;
    position: relative;
    width: 1216px;
    padding-left: 48px;
    padding-right: 48px;
    margin: 0px auto;
    padding-top: 40px;
    background-color: rgb(250, 251, 252);
}
.left{
	width: 240px;
}
.center{
	width: 880px;
    position: relative;
    background-color: rgb(250, 251, 252);
}
.outer{
	padding: 0px 35px;
    background-color: rgb(255, 255, 255);
    border: 1px solid rgb(235, 235, 235);
    border-radius: 2px;
}
.inner{
	position: relative;
    overflow: hidden;
    padding-bottom: 32px;
}
 .modify, .delete{
	float: right;
   	margin-left: auto;
}
.delete{
	margin-left: 5px;
}
.title-box{
	padding: 20px 0px;
    border-bottom: 1px solid rgb(235, 235, 235);
	line-height: 1.5;
}
.title{
	font-size: 20px;
    font-weight: 500;
    margin: 0px 0px 8px;
}
.date{
	display: inline-block;
	color: rgb(173, 177, 184);
    font-size: 12px;
}
.content-box{
	padding: 20px 0px 40px;
    line-height: 1.43;
    color: rgb(52, 58, 64);
    min-height: 160px;
}
.image-box{
	margin-bottom: 60px;
}
.images{
	position: relative;
    display: inline-block;
    max-width: 100%;
    margin-bottom: 20px;
}
.image{
	max-width: 100%;
    height: auto;
}
.reply-section{
	height: auto;
}
