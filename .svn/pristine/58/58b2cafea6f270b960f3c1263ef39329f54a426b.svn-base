.textbox{
	resize: none;
	border: 1px solid rgb(235, 235, 235);
	outline: none;
	overflow: hidden;
	
}
.insert{
	vertical-align: top;
	height: 65px;
	width: 75px;
}
.one-reply{
	border: 1px solid rgb(235, 235, 235);
	width: 800px;
	height: auto;
}
.profile{
