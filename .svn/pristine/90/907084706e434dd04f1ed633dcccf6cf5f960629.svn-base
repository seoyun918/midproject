@charset "UTF-8";
@charset "UTF-8";
	html{
		cursor: default;
	    line-height: 1.5;
	    -moz-tab-size: 4;
	    tab-size: 4;
	    -webkit-tap-highlight-color: transparent;
	    -ms-text-size-adjust: 100%;
	    -webkit-text-size-adjust: 100%;
	    word-break: break-word;
	}
	body{
		background-color: rgb(250, 251, 252);
	    color: rgb(32, 36, 41);
	    font-family: "Noto Sans KR", sans-serif;
	    font-size: 14px;
	    font-weight: normal;
	    font-style: normal;
	    font-stretch: normal;
	    line-height: 1.4;
	    letter-spacing: normal;
	    width: 100%;
	    height: 100%;
	}
	div {
    	display: block;
	}
	aside {
    	display: block;
	}
	section{
    	display: block;
	}
	ul {
	    display: block;
	    list-style-type: disc;
	    margin-block-start: 1em;
	    margin-block-end: 1em;
	    margin-inline-start: 0px;
	    margin-inline-end: 0px;
	    padding-inline-start: 40px;
	}
	a {
	    color: inherit;
	    text-decoration: none;
	    cursor: pointer;
	}
	h2 {
    display: block;
    font-size: 1.5em;
    margin-block-start: 0.83em;
    margin-block-end: 0.83em;
    margin-inline-start: 0px;
    margin-inline-end: 0px;
    font-weight: bold;
	}
	p {
	    display: block;
	    margin-block-start: 1em;
	    margin-block-end: 1em;
	    margin-inline-start: 0px;
	    margin-inline-end: 0px;
	}
	iframe, img {
	    border-style: none;
	}
	audio, canvas, iframe, img, svg, video {
	    vertical-align: middle;
	}
	.header{
		display: block;
	    width: 100%;
	    height: 75px;
	}
	.page{
		display: flex;
	    position: relative;
	    width: 1216px;
	    padding-left: 48px;
	    padding-right: 48px;
	    margin: 0px auto;
	    padding-top: 40px;
	    background-color: rgb(250, 251, 252);
	}
	.left{
		width: 240px;
	}
	.center{
		width: 880px;
	    position: relative;
	    background-color: rgb(250, 251, 252);
	}
	.outer{
		padding: 0px 35px;
	    background-color: rgb(255, 255, 255);
	    border: 1px solid rgb(235, 235, 235);
	    border-radius: 2px;
	}
	.inner{
		position: relative;
	    overflow: hidden;
	    padding-bottom: 32px;
	}
	 .modify, .delete{
		float: right;
    	margin-left: auto;
	}
	.delete{
		margin-left: 5px;
	}
	.title-box{
		padding: 20px 0px;
	    border-bottom: 1px solid rgb(235, 235, 235);
		line-height: 1.5;
	}
	.title{
		font-size: 20px;
	    font-weight: 500;
	    margin: 0px 0px 8px;
	}
	.date{
		display: inline-block;
		color: rgb(173, 177, 184);
	    font-size: 12px;
	}
	.content-box{
		padding: 20px 0px 40px;
	    line-height: 1.43;
	    color: rgb(52, 58, 64);
	    min-height: 160px;
	}
	.image-box{
		margin-bottom: 60px;
	}
	.images{
		position: relative;
	    display: inline-block;
	    max-width: 100%;
	    margin-bottom: 20px;
	}
	.image{
		max-width: 100%;
	    height: auto;
	}
	.reply-section{
		height: auto;
	}
	.count-box div{
		display: inline-block;
		border: 1px solid rgb(235, 235, 235);
		width: 15px;
		height: 25px;
		text-align: center;
		margin-right: 10px;
	}
	.textbox{
		resize: none;
		border: 1px solid rgb(235, 235, 235);
		outline: none;
		overflow: hidden;
		
	}
	.insert{
		vertical-align: top;
		height: 65px;
		width: 75px;
	}
	.one-reply{
		border: 1px solid rgb(235, 235, 235);
		width: 800px;
		height: auto;
	}
	.profile{
		border: 1px solid rgb(235, 235, 235);
		float: left;
		width: 50px;
		height: 50px;
		border-radius: 100px;
		margin: 5px;
	}
	.profile img{
		width: 50px;
		height: 50px;
		border-radius: 100px;
	}
	.reply-writer{
		display: inline-block;
		margin-right: 5px;
	}
	.reply-date{
		display: inline-block;
		color: rgb(173, 177, 184);
	    font-size: 12px;
	}
	.like, .warn{
		float: right;
		margin-left: 5px;
	}
	.reply-content{
		margin-left: 70px;
		width: 700px;
		height: auto;
	}
	.footer{
		margin-top: 100px;
	    padding-bottom: 40px;
	    font-size: 13px;
	    text-align: center;
	}
	.fout{
		margin-top: 4px;
	    display: flex;
	    -webkit-box-pack: center;
	    justify-content: center;
	    -webkit-box-align: center;
	    align-items: center;
	}
	.fin{
		color: rgb(135, 142, 150);
    	margin-top: 20px;
	}